{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@pkg/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "../../node_modules",
      "../../node_modules/@types",
    ],
    "types": [
      "@types/node",
      "@types/jest"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "babel.config.js"
  ],
  "include": [
    "**/*",
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue"
  ]
}
